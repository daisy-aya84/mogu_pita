<action>
    <h2>座標を獲得</h2>
    <%= @food.id %>
    <br>
    名前：<%= @food.name %>
    <br>
    オプション：<%= @option.name %>
    
    <p>アップロードしてください</p>
    <div class="portrait">
      <div class="form">
        <%= form_tag("/foods/#{@food.id}/save", {multipart: true}) do %>
          <input name="image" type="file" style='font-size:30px; padding:80px 0px;'><br>
          <input type="submit" value="アップロード" style='font-size:30px; padding:80px 0px;'>
        <% end %>
      </div>
    </div>
</action>
